<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.VistoriaApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_primary</item>
        <item name="colorPrimaryVariant">@color/yellow_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.VistoriaApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VistoriaApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VistoriaApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <!-- Temas especÃ­ficos para cada cor -->
    <style name="Theme.VistoriaApp.Yellow" parent="Theme.VistoriaApp">
        <item name="colorPrimary">@color/yellow_primary</item>
        <item name="colorPrimaryVariant">@color/yellow_dark</item>
        <item name="android:colorBackground">@color/background_yellow</item>
    </style>
    
    <style name="Theme.VistoriaApp.Blue" parent="Theme.VistoriaApp">
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="android:colorBackground">@color/background_blue</item>
    </style>
    
    <style name="Theme.VistoriaApp.Green" parent="Theme.VistoriaApp">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="android:colorBackground">@color/background_green</item>
    </style>
    
    <style name="Theme.VistoriaApp.Purple" parent="Theme.VistoriaApp">
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="android:colorBackground">@color/background_purple</item>
    </style>
    
    <style name="Theme.VistoriaApp.Orange" parent="Theme.VistoriaApp">
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
        <item name="android:colorBackground">@color/background_orange</item>
    </style>
</resources>