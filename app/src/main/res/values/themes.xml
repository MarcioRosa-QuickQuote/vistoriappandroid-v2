<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema Base -->
    <style name="Theme.VistoriaApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Atributos primários -->
        <item name="colorPrimary">@color/yellow_primary</item>
        <item name="colorPrimaryVariant">@color/yellow_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Atributos secundários -->
        <item name="colorSecondary">@color/yellow_primary</item>
        <item name="colorSecondaryVariant">@color/yellow_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar e barra de navegação -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Estilos de componentes -->
        <item name="materialButtonStyle">@style/Widget.VistoriaApp.Button</item>
        <item name="materialCardViewStyle">@style/Widget.VistoriaApp.Card</item>
        
        <!-- Outros atributos -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    
    <!-- Tema Amarelo -->
    <style name="Theme.VistoriaApp.Yellow" parent="Theme.VistoriaApp">
        <item name="colorPrimary">@color/yellow_primary</item>
        <item name="colorPrimaryVariant">@color/yellow_dark</item>
        <item name="colorSecondary">@color/yellow_primary</item>
        <item name="colorSecondaryVariant">@color/yellow_dark</item>
    </style>
    
    <!-- Tema Azul -->
    <style name="Theme.VistoriaApp.Blue" parent="Theme.VistoriaApp">
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorSecondary">@color/blue_primary</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
    </style>
    
    <!-- Tema Verde -->
    <style name="Theme.VistoriaApp.Green" parent="Theme.VistoriaApp">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorSecondary">@color/green_primary</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
    </style>
    
    <!-- Tema Roxo -->
    <style name="Theme.VistoriaApp.Purple" parent="Theme.VistoriaApp">
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorSecondary">@color/purple_primary</item>
        <item name="colorSecondaryVariant">@color/purple_dark</item>
    </style>
    
    <!-- Tema Laranja -->
    <style name="Theme.VistoriaApp.Orange" parent="Theme.VistoriaApp">
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
        <item name="colorSecondary">@color/orange_primary</item>
        <item name="colorSecondaryVariant">@color/orange_dark</item>
    </style>
</resources>