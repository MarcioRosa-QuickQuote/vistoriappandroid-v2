<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewRoomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Cômodo"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descreva o cômodo aqui"
        android:inputType="textMultiLine"
        android:minLines="4"
        android:gravity="top|start"
        android:background="@drawable/rounded_yellow_button"
        android:padding="12dp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonSaveDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_purple_button"
        android:textColor="@android:color/white" />
</LinearLayout>
